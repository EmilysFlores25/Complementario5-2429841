<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Complementario52429841.MainPage">

    <VerticalStackLayout>
        <Image
                Source="rectangulo.png"
                HeightRequest="185"
                Aspect="AspectFit"/>

        <Label Text="Calcular"
            VerticalOptions="Center"
            HorizontalOptions="Center"/>

        <Entry x:Name="Entry1" Placeholder="Introduce la altura del rectangulo"/>
        <Entry x:Name="Entry2" Placeholder="Introduce la base del rectangulo"/>
        <Entry x:Name="Entry3" Placeholder="El perimetro del rectangulo es: "/>
        <Entry x:Name="Entry4" Placeholder="La superficie del rectangulo es: "/>

        <Button Text="Sumar" Clicked="Button_Clicked"/>


    </VerticalStackLayout>

</ContentPage>
